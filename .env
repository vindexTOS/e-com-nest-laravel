# ===========================================
# E-COMMERCE PLATFORM - CENTRALIZED ENVIRONMENT
# ===========================================
# Copy this file to .env and modify as needed
# Docker Compose automatically loads .env from this directory

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DB_USER=ecom_user
DB_PASSWORD=ecom_password
DB_NAME_WRITE=ecom_db_write
DB_NAME_READ=ecom_db_read

# Internal Docker hostnames (don't change unless you rename services)
DB_WRITE_HOST=postgres-write
DB_READ_HOST=postgres-read
DB_PORT=5432

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_HOST=redis
REDIS_PORT=6379

# ===========================================
# ELASTICSEARCH CONFIGURATION
# ===========================================
ELASTICSEARCH_NODE=http://elasticsearch:9200

# ===========================================
# JWT CONFIGURATION (SHARED BETWEEN LARAVEL & NESTJS)
# ===========================================
# IMPORTANT: Must be the same for both services!
JWT_SECRET=TEST
JWT_EXPIRATION=7d
JWT_REFRESH_EXPIRATION=7d

# ===========================================
# LARAVEL (ADMIN SERVICE) CONFIGURATION
# ===========================================
APP_NAME=EcomAdmin
APP_ENV=production
APP_DEBUG=false
APP_KEY=base64:uQsffUPbReVqWhDDhrx5FsduqgPKg3JiZQ98MAuKBX4=
APP_URL=http://localhost

# Laravel Cache/Queue/Session
CACHE_DRIVER=file
CACHE_STORE=file
QUEUE_CONNECTION=redis
SESSION_DRIVER=file
REDIS_CLIENT=phpredis

# ===========================================
# NESTJS (API GATEWAY) CONFIGURATION
# ===========================================
NODE_ENV=production
API_GATEWAY_PORT=3000

# ===========================================
# INTERNAL SERVICE URLS
# ===========================================
API_GATEWAY_URL=http://api-gateway:3000
